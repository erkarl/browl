<h2 id="title">Posts</h2>
{{#each model}}
  <li class="list-group-item">
    {{#link-to 'post' id}}{{title}}{{/link-to}}
    <div class="pull-right">
      {{#link-to 'admin.edit' this.id}}<button class="btn btn-default" >Edit</button>{{/link-to}}
      <button class="btn btn-default" {{action "deleteEntry" this}}>Delete</button>
    </div>
    <br>
    <br>
  </li>
{{/each}}
